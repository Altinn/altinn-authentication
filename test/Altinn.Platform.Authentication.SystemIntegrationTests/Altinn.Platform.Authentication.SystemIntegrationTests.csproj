      </None>
      <None Update="Resources\Testusers\testusers.tt02.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Resources\Testusers\testusers.at.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Resources\Testdata\ChangeRequest\CreateNewSystem.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Resources\Testdata\ChangeRequest\ChangeRequest.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
